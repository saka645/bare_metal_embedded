#include <stm32f0xx.h>

#define ADC1_EN			(1U<<9)
#define GPIOA_EN		(1U<<16)
#define ADC_EN			(1U<<0)

void pa1_adc_init(void)
{
	/* configure adc gpio pin */

	/* enable clock access to gpioa */
	RCC->AHBENR |= GPIOA_EN;
	/* set pa1 mode to analog */
	GPIOA->MODER |= (1U<<2);
	GPIOA->MODER |= (1U<<3);
	/*configure adc module */

	/* enable clock access to adc */
	RCC->APB2ENR |= ADC1_EN;
	/* configure adc parameters */

	ADC1->CR |= ADC_EN;

}
