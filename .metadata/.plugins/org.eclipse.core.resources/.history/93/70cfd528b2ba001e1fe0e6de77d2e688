#include <stm32f0xx.h>

#define TIMER16_EN			(1U<<17)
#define TIMER6_EN			(1U<<4)
#define CR1_CEN				(1U<<0)

void timer6_init1Hz()
{
	/*enable clock access to timer6/*	 */
	RCC->APB1ENR |= TIMER6_EN;
	/*set prescalar value*/
	TIM6->PSC = 4800 -1;
	/*set auto reload value*/
	TIM6->ARR = 10000 -1;
	/*enable timer*/
	TIM6->CNT = 0;
	TIM6->CR1 |= CR1_CEN;
}


void timer16_OutputCompare()
{
	/*enable clock access to timer3/*	 */
	RCC->APB2ENR |= TIMER16_EN;
	/*set prescalar value*/
	TIM3->PSC = 4800 -1;
	/*set auto reload value*/
	TIM3->ARR = 10000 -1;

	/*set output compare toggle mode*/
	/*enable timer3 channel4 */




	/*enable timer*/
	TIM3->CNT = 0;
	TIM3->CR1 |= CR1_CEN;
}
